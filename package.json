{
  "author": "Florian Bourgeaud",
  "license": "MIT",
  "name": "@npmineral/pouchdb-config",
  "description": "Configuration api for pouchdb databases",
  "keywords": [
    "Storage",
    "PouchDB",
    "PouchORM",
    "CouchDB"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FlitHub/pouchdb-config.git"
  },
  "homepage": "https://github.com/FlitHub/pouchdb-config.git",
  "version": "0.0.1",
  "main": "lib/main.js",
  "types": "lib/pouchdb-config.d.ts",
  "module": "lib/main.esm.js",
  "files": [
    "lib/src",
    "lib/main.js",
    "package.json"
  ],
  "scripts": {
    "build-ts": "./node_modules/.bin/ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start:old": "node -r module-alias/register ./lib --env=production",
    "start": "npm run start:dev",
    "start:dev": "nodemon && ts-node-dev",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "jest": "npm test",
    "build:clear": "rimraf lib/*",
    "tsc": "tsc --build tsconfig.json",
    "build:rollup": "rollup -c",
    "build": "run-s build:clear tsc build:rollup",
    "watch": "tsc --watch"
  },
  "nodemonConfig": {
    "watch": [
      "main.ts",
      "src"
    ],
    "ext": "ts, html",
    "exec": "./node_modules/.bin/ts-node -P tsconfig.serve.json -r tsconfig-paths/register ./main.ts"
  },
  "_moduleAliases": {
    "@model": "lib/model",
    "@util": "lib/util"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "1.10.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graceful-fs": "^4.2.6",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "jsonlint": "^1.6.3",
    "module-alias": "^2.2.2",
    "pouchdb": "^7.2.2",
    "pouchorm": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.7",
    "@types/jest": "^26.0.21",
    "@types/jsonfile": "^6.0.0",
    "@types/node": "^14.14.35",
    "@types/pouchdb": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.1",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "supertest": "^6.1.3",
    "terser": "^5.6.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
