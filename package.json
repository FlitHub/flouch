{
  "author": "Florian Bourgeaud",
  "license": "ISC",
  "name": "@npmineral/local-storage-api",
  "description": "API for local storage with typescript and CouchDB",
  "keywords": [
    "Storage",
    "CouchDB"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FlitHub/local-storage-api.git"
  },
  "homepage": "https://github.com/FlitHub/local-storage-api.git",
  "version": "0.0.6",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.esm.js",
  "files": [
    "lib",
    "index*",
    "package.json"
  ],
  "scripts": {
    "build-ts": "./node_modules/.bin/ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start:old": "node -r module-alias/register ./lib --env=production",
    "start": "npm run start:dev",
    "start:dev": "nodemon && ts-node-dev",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "jest": "npm test",
    "build:clear": "rimraf lib/*",
    "tsc": "tsc --build tsconfig.json",
    "build:rollup": "rollup -c",
    "build": "run-s build:clear tsc build:rollup",
    "watch": "tsc --watch"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@model": "lib/model",
    "@shared": "lib/shared",
    "@controllers": "lib/controllers",
    "@middlewares": "lib/middlewares",
    "@service": "lib/service"
  },
  "dependencies": {
    "@types/express-serve-static-core": "^4.17.18",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "dayjs": "1.10.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nano": "^9.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.7",
    "@types/jasmine": "^3.6.4",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "jasmine": "^3.6.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4",
    "supertest": "^6.1.3",
    "terser": "^5.6.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
