{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esNext",
    "target": "es5",
    "lib": ["es2020", "es2015", "dom"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@model/*": ["src/model/*"],
      "@shared/*": ["src/shared/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@service/*": ["src/service/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "src/**/*.js"],
  "compileOnSave": false,
  "buildOnSave": false
}
